  <span class="p">}</span>
<span class="err">}</span>
  
<span class="nc">.extensions--video</span> <span class="p">{</span>
  <span class="nl">padding-top</span><span class="p">:</span> <span class="n">percentage</span><span class="p">(</span><span class="m">315</span> <span class="p">/</span> <span class="m">560</span><span class="p">);</span>
  <span class="nl">box-shadow</span><span class="p">:</span> <span class="m">0</span> <span class="m">2px</span> <span class="m">4px</span> <span class="m">1px</span> <span class="nb">rgb</span><span class="p">(</span><span class="m">28</span><span class="p">,</span> <span class="m">29</span><span class="p">,</span> <span class="m">77</span><span class="p">);</span>
